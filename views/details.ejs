<%- include('./partials/header') %>

<main class="details">
    <h1><%= product.title %></h1>
    <img src="<%= product.imageUrl %>" class="details-image" alt="product.title">
    <b>Rs: <%= product.price %></b>
    <p><%= product.description %></p>
    <% if(isAuthenticated){ %> 
    <form action="/cart" method="post">
            <input class="logout-btn" type="submit" value="Add to Cart">
    </form>
    <% } %> 
</main>

<%- include('./partials/footer') %>